  /* 日历 */
.calendar {
    margin-top: 11%;
    background: #ffffff;
    border-radius: 0 0 20rpx 20rpx;
    padding: 0 0 20rpx;
    border: 1rpx solid orange;
    height: 460rpx;
}

  
.header {
    width: 100%;
}
  
/* 星期 */
.header>view {
    display: inline-block;
    width: 14.285%;
    color: rgb(206, 206, 206);
    font-size: 30rpx;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 20rpx 0;
}
  
  .weekMark {
    position: relative;
    width: 80%;
    margin: 0 auto;
  }
  
  .weekMark view {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 2px solid rgb(253, 152, 0);
  }
  
  .date-box {
    padding: 10rpx 0;
    width: 100%;
    margin: 0 auto;
  }
  
  .date-box>view {
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #666;
    text-align: center;
    vertical-align: middle;
  }
  
